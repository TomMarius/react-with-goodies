{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "strict": true,

        "paths": {
            "@api": ["./source/api/index"],
            "@api/*": ["./source/api/*"],
            "@components/*": ["./source/components/*"],
            "@hooks/*": ["./source/hooks/*"],
            "@pages/*": ["./source/pages/*"]
        }
    }
}
